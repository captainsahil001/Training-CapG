package method;

public class PrimeN {
	
	public static boolean isPrime(int n) {
		for (int i =2; i<=n/2;i++) {
			if(n %i==0) 
				return false;
		}
			
			return true;
		}
	
	public static int pow(int a, int b) {
		if(b == 0) {
			return 1;
		}
		return a *pow(a,b-1);
	}
	
	public static int countDig(int number) {
		int count = 0;
		while (number != 0) {
            number = number / 10;
            count++;
        }

        return count;
	}
	
	public static String armSt(int n) {
		int m = countDig(n);
		int sum = 0;
		while(m<=n) {
			sum = sum + pow((n%10),m);
			n=n/10;
		}
		if(sum == n) {
			System.out.println("Armstrong Number");
		}
		return "Not an Armstrong Number";
		
	}
	
	public static void main(String[] args) {
		if(isPrime(20)) {
			System.out.println("Is a Prime Number");
		}
		else {
			System.out.println("Not a Prime Numbner");
		}
		System.out.println(pow(2,3));
		System.out.println(armSt(1634));
	}
	}


