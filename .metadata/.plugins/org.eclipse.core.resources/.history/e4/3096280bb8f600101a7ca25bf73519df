package oops.string;

import java.util.Arrays;


public class StringBufferBuilder {
	public static void reverse(String s) {
		StringBuilder sb = new StringBuilder();
		String[] ch = s.split(" ");
		for(int i=ch.length-1;i>=0;i--) {
			sb.append(ch[i] +" ");
		}
		System.out.println(sb);
	}
	public static void anagram(String a, String b) {
		char[] ch1 = a.toCharArray();
		char[] ch2 = b.toCharArray();
		Arrays.sort(ch1);
		Arrays.sort(ch2);
		if(ch1 == ch2) {
			System.out.println("It is anagram");
		}
		else {
			System.out.println("it is not an anagram");
		}
	}
	public static void main(String[] args) {
		StringBuffer s1 = new StringBuffer("xyz");
		StringBuffer s2 = new StringBuffer("xyz");
		
		System.out.println(s1);
		System.out.println(s1.toString());
		System.out.println(s1.equals(s2));//false as without override it compares address
		System.out.println(s1 == s2);// false
		System.out.println("---------------");
		
		StringBuilder s3 = new StringBuilder("xyz");
		StringBuilder s4 = new StringBuilder("xyz");
		System.out.println(s3);
		System.out.println(s3.toString());
		System.out.println(s3.equals(s4));//false
		System.out.println(s3 == s4);//false
		System.out.println("---------------");

		
		//Builder is less secure and buffer is more secure
		//
		
		//conversion
		String s = new String(s1);//SB to String
		
		StringBuffer s5 = new StringBuffer(s);//String to SB
		System.out.println(s5);
		System.out.println("---------------");

		
		
		//String buffer methods
		s1.reverse();
		System.out.println(s1);
		System.out.println("---------------");

		
		
		s1.append(" java");
		System.out.println(s1);
		System.out.println("---------------");

		StringBuffer s6 = new StringBuffer(); //16 capacity default but we can increase by specifying no. in ();
		System.out.println(s6.capacity());
		System.out.println("---------------");
		
		//default length of char array is 16
		
		StringBuffer s7 = new StringBuffer("xyz");
		s7.insert(1,"abc");
		System.out.println(s7);
		s7.delete(0, 2);
		System.out.println(s7);
		s7.replace(0,2,"hii");
		System.out.println(s7);
		System.out.println("---------------");
		
		
		String sg = "i am sahil";
		reverse(sg);
		
		
		System.out.println("---------------");
		char[] ch = {'b','a','c'};
		char[] ch2 = {'d','f','e'};
		Arrays.sort(ch);
		System.out.println(Arrays.toString(ch));
		Arrays.sort(ch2);
		System.out.println(Arrays.equals(ch, ch2));
		System.out.println("---------------");
		
		
		String a = "ilents";
		String b = "slenti";
		anagram(a,b);
		
		System.out.println("---------------");
		
		
	}

}
