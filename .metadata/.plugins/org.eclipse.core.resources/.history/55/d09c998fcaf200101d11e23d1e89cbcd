package oops.array2D;
import java.util.Scanner;

public class EvenIndex2D {
	

	    // Method to take input
	   	public static int[][] inputArray(int r, int c) {
	        Scanner sc = new Scanner(System.in);
	        int[][] arr = new int[r][c];

	        System.out.println("Enter elements:");
	        for (int i = 0; i < r; i++) {
	            for (int j = 0; j < c; j++) {
	                arr[i][j] = sc.nextInt();
	            }
	        }
	        return arr;
	    }

	   
	    public static void findEvenIndex(int[][] arr) {
	        System.out.println("Even elements and their indexes:");
	        for (int i = 0; i < arr.length; i++) {
	            for (int j = 0; j < arr[i].length; j++) {
	                if (arr[i][j] % 2 == 0) {
	                    System.out.println("Element " + arr[i][j] +
	                            " found at index (" + i + ", " + j + ")");
	                }
	            }
	        }
	    }

	    public static void main(String[] args) {

	        Scanner sc = new Scanner(System.in);

	        System.out.print("Enter rows: ");
	        int rows = sc.nextInt();

	        System.out.print("Enter columns: ");
	        int cols = sc.nextInt();

	        int[][] arr = inputArray(rows, cols);
	        findEvenIndex(arr);

	        sc.close();
	    }
	


}
