package oops.array.arrayId;

public class EmployeeServiceImp {

	public Employee[] getHighSalaryEmployees(Employee[] employees, double minSalary) {
        int count = 0;
        for (Employee e : employees) {
            if (e != null && e.getSalary() >= minSalary) count++;
        }

        Employee[] result = new Employee[count];
        int idx = 0;
        for (Employee e : employees) {
            if (e != null && e.getSalary() >= minSalary) {
                result[idx++] = e;
            }
        }
        return result;
    }

    @Override
    public double calculateAverageSalary(Employee[] employees) {
        double sum = 0;
        int count = 0;

        for (Employee e : employees) {
            if (e != null) {
                sum += e.getSalary();
                count++;
            }
        }
        return count == 0 ? 0 : sum / count;
    }

    @Override
    public Employee getTopPaidEmployee(Employee[] employees) {
        Employee top = null;

        for (Employee e : employees) {
            if (e != null) {
                if (top == null || e.getSalary() > top.getSalary()) {
                    top = e;
                }
            }
        }
        return top;
    }

    @Override
    public Employee[] getExperiencedEmployees(Employee[] employees, int minYears) {
        int count = 0;
        for (Employee e : employees) {
            if (e != null && e.getExperience() >= minYears) count++;
        }

        Employee[] result = new Employee[count];
        int idx = 0;
        for (Employee e : employees) {
            if (e != null && e.getExperience() >= minYears) {
                result[idx++] = e;
            }
        }
        return result;
    }

    @Override
    public Employee getTopPaidEmployeeByDepartment(Employee[] employees, String department) {
        if (department == null) return null;

        Employee top = null;
        for (Employee e : employees) {
            if (e != null && e.getDepartment() != null &&
                e.getDepartment().equalsIgnoreCase(department)) {

                if (top == null || e.getSalary() > top.getSalary()) {
                    top = e;
                }
            }
        }
        return top;
    }

    @Override
    public double getAverageSalaryByDepartment(Employee[] employees, String department) {
        if (department == null) return 0;

        double sum = 0;
        int count = 0;

        for (Employee e : employees) {
            if (e != null && e.getDepartment() != null &&
                e.getDepartment().equalsIgnoreCase(department)) {

                sum += e.getSalary();
                count++;
            }
        }
        return count == 0 ? 0 : sum / count;
    }
}
