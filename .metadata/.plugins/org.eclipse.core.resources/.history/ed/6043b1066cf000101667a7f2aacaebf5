package pattern;

public class StarPrint {
	public static void p1(int n) {
		for (int i = 1; i <= 3; i++) {
			for (int j = 1; j <= i; j++) {
				System.out.print("*");

			}
			System.out.println();
		}
	}
	public static void p2(int n) {
		for (int i=1;i<=n;i++) {
			for(int j=n;j<=i;j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
	public static void main(String[] args) {
		p1(3);
		p2(3);
	}

}
