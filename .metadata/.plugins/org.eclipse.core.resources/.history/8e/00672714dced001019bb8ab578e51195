package loop;

public class AvgDigNum {
	public static void main(String[] args) {

		int number = 12464; 
		int sum = 0;
		int count = 0;

		while (number != 0) {
			int digit = number % 10;
			sum = sum + digit;
			count++;
			number = number / 10;
		}

		double average =  sum / count;

		System.out.println("Average of digits = " + average);
	}

}
