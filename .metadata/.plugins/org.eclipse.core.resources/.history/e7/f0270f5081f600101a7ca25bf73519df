package oops.am;

import java.util.Objects;

@SuppressWarnings("unused")
public class Employee {
	int id;
	String name;
	double salary;
	String department;
	
	public Employee(int id, String name, double salary,String department) {
		this.id = id;
		this.name = name;
		this.salary=salary;
		this.department = department;
	}
	
	public Employee() {
		
	}

	@Override
	public String toString() {
		return "id:"+id+" "+"name:"+name+" "+"salary:"+salary+" "+"department:"+department+" ";
	}
	
	
	public boolean hashCode(Employee a) {
		return this.id == a.id && this.name.equals(a.name) && this.salary==a.salary && this.department.equals(a.department);
	}
	
	@Override
	public boolean equals(Object o) {
		if(o==null || this.getClass() != o.getClass()) return false;//prevent  null pointer exception & class caste exception we match with class as object here is parent of all so we need to downcast and print some of its child objects.
		Employee s = (Employee)o;
		return this.id==s.id && this.name==s.name && this.salary==s.salary && this.department == s.department;
	}
	
	public static void main(String[] args) {
		Employee e = new Employee(100,"Sahil",10000.0d,"IT");
		Object a = new Employee(110,"rahul",10000d,"IT");
		Employee e1 = null;

		Employee[] employee=new Employee[5];
		
		employee[0] = e;
		employee[1] = new Employee(101,"Sg",1000000d,"IT");
		employee[2] = new Employee(102,"Sh",1000220d,"CS");
		employee[3]= (Employee)a;
		employee[4]= e1;
		
		for(int i =0;i<employee.length;i++) {
			System.out.println(employee[i]);
			
		}
		
		System.out.println(employee[1].hashCode(employee[2]));
		System.out.println(employee[1].equals(employee[4]));
		
		
	}

}
