package oops.string;

public class SpecialSymbolCount {

	public static void main(String[] args) {
		String s = "Hello@#2024!";

		String specials = "";
		int count = 0;

		for (int i = 0; i < s.length(); i++) {
			char ch = s.charAt(i);

			// special symbol = not letter, not digit, not space
			if (!Character.isLetterOrDigit(ch) && ch != ' ') {
				specials += ch + " ";
				count++;
			}
		}

		System.out.println("Special symbols: " + specials.trim());
		System.out.println("Count: " + count);
	}

}
