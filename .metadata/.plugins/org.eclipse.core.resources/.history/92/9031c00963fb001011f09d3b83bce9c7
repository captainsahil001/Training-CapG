package oops.collframe;

import java.util.HashMap;
import java.util.Map;

public class EmployeeDriver1 {
	public static void main(String[] args) {
		Map<Integer, Employee1> map = new HashMap<>();

        // Adding employees
        map.put(101, new Employee1(101, "Sahil", 50000));
        map.put(102, new Employee1(102, "Animesh", 60000));
        map.put(103, new Employee1(103, "Arnab", 55000));


        System.out.println("ID   Name   Salary");
        System.out.println("------------------");

        for (Map.Entry<Integer, Employee1> entry : map.entrySet()) {
            entry.getValue().display();
        	}

	}
}