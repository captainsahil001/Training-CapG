package oops.array;

public class ReturnEvenArr {
	public static int[] findEvenElement(int[] arr) {
		int count = 0;
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] % 2 == 0) {
                count++;
            }
        }

       
        int[] evenArr = new int[count];
        int index = 0;

        
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] % 2 == 0) {
                evenArr[index++] = arr[i];
            }
        }

        return evenArr;
	}
	public static void main(String[] args) {
		int[] a = {3,4,5,6,7,8};
		int[] result = findEvenElement(a); 
		
		for(int i=0;i<result.length;i++) {
			System.out.println(result[i] + " ");
		}
	}

}
