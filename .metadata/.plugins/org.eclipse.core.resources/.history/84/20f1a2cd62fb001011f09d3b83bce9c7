package oops.collframe;

import java.util.HashMap;
import java.util.Map;

public class EmployeeDriver1 {
	public static void main(String[] args) {
		Map<Integer, Employee1> map = new HashMap<>();

        // Adding employees
        map.put(101, new Employee1(101, "Rahul", 50000));
        map.put(102, new Employee1(102, "Anita", 60000));
        map.put(103, new Employee1(103, "Sahil", 55000));

        int searchId = 102;

        // Printing employee based on ID
        if (map.containsKey(searchId)) {
            Employee1 e = map.get(searchId);
            e.display();
        } else {
            System.out.println("Employee not found");
        }
	}

}
