package oops.exception;

@SuppressWarnings("serial")
public class IdException extends RuntimeException{
	int id;
	public IdException(String msg) {
		super(msg);
	}
	public IdException(int id) {
		this.id=id;
	}
	public  void check(int id) {
		id = this.id;
		if(id>0 && id<100) {
			System.out.println("Id is valid");
		}else {
			throw new IdException(id+"is invalid");
		}
	}
	public static void main(String[] args) {
		try{
			IdException id1 = new IdException(101);
			id1.check(101);
		}catch(IdException e){
			System.out.println("IdException occured");
		}
		
	}

}
