package oops.array;
import java.util.Scanner;
public class ExArr2 {
	
	public static void takeIntArr() {
		@SuppressWarnings("resource")
		Scanner sc =new Scanner(System.in);
		System.out.println("Enter array size");
		int[] a =new int[sc.nextInt()];
		for(int i =0;i<a.length;i++) {
			a[i] = sc.nextInt();
		}
		System.out.println("Array elements print now");
		for(int i = 0;i<a.length;i++) {
			System.out.print(a[i]);
		}
		System.out.println();
	}
	public static void takeStringArr() {
		Scanner sc =new Scanner(System.in);
		System.out.println("Enter array size");
		String[] a =new String[sc.nextInt()];
		for(int i =0;i<a.length;i++) {
			a[i] = sc.next();
		}
		System.out.println("Array elements print now");
		for(int i = 0;i<a.length;i++) {
			System.out.print(a[i]);
		}
		System.out.println();
	}
	public static void takeCharArr() {
		Scanner sc =new Scanner(System.in);
		System.out.println("Enter array size");
		char[] a =new char[sc.nextInt()];
		for(int i =0;i<a.length;i++) {
			a[i] = sc.next().charAt(0);
		}
		System.out.println("Array elements print now");
		for(int i = 0;i<a.length;i++) {
			System.out.print(a[i]);
		}
		System.out.println();
	}
	public static void takebooleanArr() {
		Scanner sc =new Scanner(System.in);
		System.out.println("Enter array size");
		boolean[] a =new boolean[sc.nextInt()];
		for(int i =0;i<a.length;i++) {
			a[i] = sc.nextBoolean();
		}
		System.out.println("Array elements print now");
		for(int i = 0;i<a.length;i++) {
			System.out.print(a[i]);
		}
		System.out.println();
	}
	public static void takeFloatArr() {
		Scanner sc =new Scanner(System.in);
		System.out.println("Enter array size");
		float[] a =new float[sc.nextInt()];
		for(int i =0;i<a.length;i++) {
			a[i] = sc.nextFloat();
		}
		System.out.println("Array elements print now");
		for(int i = 0;i<a.length;i++) {
			System.out.print(a[i]);
		}
		
		System.out.println();
	}
	public static void main(String[] args) {
		
		takeFloatArr();
		
	}

}
